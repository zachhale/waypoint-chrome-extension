{
  "name": "Waypoint",
  "description": "Load on every page",
  "version": "0.1",
  "permissions": [
    "tabs","<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ], 
  "manifest_version":2
}